<local:ControlBase x:Class="Energy.UI.Controls.Consumer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Energy.UI.Controls"
             mc:Ignorable="d" Height="50" Width="100">
    <Grid>
        <Border BorderThickness="2" BorderBrush="Black" Background="LightSalmon" CornerRadius="10">
            <TextBlock Name="NameTextBlock" TextWrapping="Wrap" TextAlignment="Center" Text="{Binding Path=ControlName}" VerticalAlignment="Center" />
        </Border>
        <Rectangle RadiusX="10" RadiusY="10" Fill="LightBlue" Opacity="0.7" Visibility="{Binding Path=IsSelected, Converter={StaticResource BooleanToVisibilityConverter} }" />
    </Grid>
</local:ControlBase>
